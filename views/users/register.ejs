<!---------views--users--register.ejs----------->

<% layout('layouts/boilerplate') %> 

    <div class="container d-flex justify-content-centre align-items-centre mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card shadow">
                    <img src="https://source.unsplash.com/random" alt="" class="card-img-top " background-size-cover>
                    <div class="card-body">
                        <h5 class="card-title">Login</h5>
        <form action="/register" method="POST"  novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="email">Email</label>
                <input class="form-control" type="email" id="email" name="email" autofocus required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="username">Username</label>
                <input class="form-control" type="text" id="username" name="username"  required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">Password</label>
                <input class="form-control" type="password" id="password" name="password" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <button class="btn btn-success">Register</button>
        </form>
    </div>
    </div>
    </div>
    </div>
    </div>